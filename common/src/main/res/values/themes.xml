<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">#FAD223</item>
        <item name="colorPrimaryDark">#DCBE0F</item>

        <item name="colorSecondary">#DCBE0F</item>
        <item name="colorSecondaryVariant">#DCBE0F</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorSurface">#F1F0F2</item>
        <item name="colorOnPrimary">#DCDCDC</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:colorControlNormal">@color/colorControlNormal</item>
        <item name="android:colorControlActivated">@color/colorControlActivated</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
<!--        <item name="windowSplashScreenBackground">@drawable/background_app_icon</item>-->
<!--        <item name="windowSplashScreenIconBackgroundColor">@drawable/background_app_icon</item>-->
<!--        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon</item>-->
<!--        <item name="windowSplashScreenAnimationDuration">2000</item>-->
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

    <style name="Style.Button.Filled" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@color/stroke_outlined_text_input</item>
        <item name="boxStrokeColor">@color/stroke_outlined_text_input</item>
        <item name="cornerRadius">@dimen/radius_button</item>

        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
        <item name="backgroundTint">@color/colorPrimary</item>

        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="Style.Button.Outlined" parent="Theme.App">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/stroke_outlined_text_input</item>
        <item name="boxStrokeColor">@color/stroke_outlined_text_input</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
    </style>

    <style name="Style.Text.H1" parent="Theme.App">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_h1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
    </style>

    <style name="Style.Text.H2" parent="Theme.App">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_h2</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Style.Text.H3" parent="Theme.App">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_h3</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Style.Text.H4" parent="Theme.App">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_h4</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Style.Text.H5" parent="Theme.App">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_h5</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
    </style>

    <style name="Style.App.Fragment" parent="Theme.App">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_h1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="background">@color/white</item>
    </style>

    <style name="Style.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal">35dp</item>

        <item name="strokeColor">@color/stroke_outlined_text_input</item>

        <!--box stroke-->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/stroke_outlined_text_input</item>

        <!--box background-->
        <item name="boxBackgroundColor">@color/stroke_outlined_text_input</item>

        <!--box corner-->
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_default</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_default</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_default</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_default</item>
    </style>

    <style name="Style.TextInputLayout.Filled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginHorizontal">35dp</item>

        <!--box stroke-->
        <item name="boxStrokeWidth">0dp</item>

        <!--box background-->
        <item name="boxBackgroundColor">@color/background_filled_textInputLayout</item>

        <item name="android:colorControlNormal">@color/colorControlNormal</item>
        <item name="android:colorControlActivated">@color/colorControlActivated</item>

        <!--box corner-->
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_default</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_default</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_default</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_default</item>
    </style>

    <style name="Style.Doalog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@color/loadingDialogBackground</item>
        <item name="android:windowNoTitle">true</item>

        <item name="cardBackgroundColor">@color/loadingDialogBackground</item>
        <item name="cardElevation">@dimen/defaultCornerRadius</item>
    </style>
</resources>